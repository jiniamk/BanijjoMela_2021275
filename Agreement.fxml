<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F0F8FF;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.banijjomelaoop.AgreementController">
    <children>
        <Label layoutX="180.0" layoutY="20.0" text="Manage Agreement" style="-fx-background-color: #2F4F4F;" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="80.0" text="Agreement ID:"/>
        <TextField fx:id="agreementIdTextField" layoutX="150.0" layoutY="80.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="120.0" text="Sponsor ID:"/>
        <TextField fx:id="sponsorIdTextField" layoutX="150.0" layoutY="120.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="160.0" text="Terms:"/>
        <TextField fx:id="termsTextField" layoutX="150.0" layoutY="160.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="200.0" text="Status:"/>
        <TextField fx:id="statusTextField" layoutX="150.0" layoutY="200.0" prefWidth="300.0" />

        <Button layoutX="150.0" layoutY="240.0" text="Create Agreement" onAction="#createAgreement"/>
        <Button layoutX="300.0" layoutY="240.0" text="Update Agreement" onAction="#updateAgreement"/>
        <Button layoutX="450.0" layoutY="240.0" text="Terminate Agreement" onAction="#terminateAgreement"/>
    </children>
</AnchorPane>

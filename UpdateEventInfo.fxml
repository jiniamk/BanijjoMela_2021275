<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F0F8FF;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.banijjomelaoop.UpdateEventInfoController">
    <children>
        <Label layoutX="180.0" layoutY="20.0" text="Update Event Information" style="-fx-background-color: #2F4F4F;" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="80.0" text="Event ID:"/>
        <TextField fx:id="eventIdTextField" layoutX="150.0" layoutY="80.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="120.0" text="Event Name:"/>
        <TextField fx:id="eventNameTextField" layoutX="150.0" layoutY="120.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="160.0" text="Event Description:"/>
        <TextField fx:id="eventDescTextField" layoutX="150.0" layoutY="160.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="200.0" text="Event Date:"/>
        <TextField fx:id="eventDateTextField" layoutX="150.0" layoutY="200.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="240.0" text="Event Location:"/>
        <TextField fx:id="eventLocTextField" layoutX="150.0" layoutY="240.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="280.0" text="Event Status:"/>
        <TextField fx:id="eventStatusTextField" layoutX="150.0" layoutY="280.0" prefWidth="300.0" />

        <Button layoutX="150.0" layoutY="320.0" text="Update Event Info" onAction="#updateEventInfo"/>
        <Button layoutX="300.0" layoutY="320.0" text="Reschedule Event" onAction="#rescheduleEvent"/>
        <Button layoutX="450.0" layoutY="320.0" text="Notify Participants" onAction="#notifyParticipants"/>
    </children>
</AnchorPane>

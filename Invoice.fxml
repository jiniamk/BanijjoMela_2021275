<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #F0F8FF;" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.banijjomelaoop.InvoiceController">
    <children>
        <Label layoutX="180.0" layoutY="20.0" text="Manage Invoice" style="-fx-background-color: #2F4F4F;" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="80.0" text="Invoice ID:"/>
        <TextField fx:id="invoiceIdTextField" layoutX="150.0" layoutY="80.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="120.0" text="Amount:"/>
        <TextField fx:id="amountTextField" layoutX="150.0" layoutY="120.0" prefWidth="300.0" />

        <Label layoutX="30.0" layoutY="160.0" text="Status:"/>
        <TextField fx:id="statusTextField" layoutX="150.0" layoutY="160.0" prefWidth="300.0" />

        <Button layoutX="150.0" layoutY="200.0" text="Generate Invoice" onAction="#generateInvoice"/>
        <Button layoutX="300.0" layoutY="200.0" text="Update Invoice" onAction="#updateInvoice"/>
        <Button layoutX="450.0" layoutY="200.0" text="View Invoice" onAction="#viewInvoice"/>
    </children>
</AnchorPane>
